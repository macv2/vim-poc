@page
@model WebApp.Pages.LocalDbClient.LocalDbPageModel

@{
}

<h1>NetworkDB - Productos</h1>

<div class="m-4">
    <div class="row">
        <div class="col">
            <form method="get">
                <div class="mb-2">
                    <button type="submit" asp-page-handler="GetProductList" class="btn btn-primary">Mostrar productos</button>
                </div>
            </form>
            @if (Model.ProductList is not null)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Cantidad</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ProductList)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Value</td>
                                <td>@item.Quantity</td>
                            </tr>
                        }
                    </tbody>
                </table>                
            }
        </div>
        <div class="col">
            <form method="post">
                <div class="mb-2">
                    <label class="m-1">Nombre</label>
                    <input asp-for="ProductName" />
                </div>
                <div class="mb-2">
                    <label class="m-1">Precio</label>
                    <input asp-for="ProductValue" />
                </div>
                <div class="mb-2">
                    <label class="m-1">Cantidad</label>
                    <input asp-for="ProductQuantity" />
                </div>     
                <button type="submit" asp-page-handler="SaveProduct" class="btn btn-primary">Agregar producto</button>
            </form>
        </div>
    </div>

</div>
